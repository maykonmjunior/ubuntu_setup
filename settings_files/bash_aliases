alias list='cat ~/.bash_aliases'
alias upd='sudo apt update && sudo apt upgrade -y && sudo apt install -fy && sudo apt --fix-broken install -y && sudo apt autoclean -y && sudo apt autopurge -y'
alias upd_discord='upd && cd ~/Github/ubuntu_setup/src && make -f discord.mk && upd'
alias get_ytdlp='cat ~/Github/ubuntu_setup/src/yt-dlp.mk'
alias get_music='yt-dlp --format bestaudio --extract-audio --audio-format mp3 --audio-quality 160K --output "%(title)s.%(ext)s"'
alias orange='python3 -m Orange.canvas'